{
  "cli": {
    "version": ">= 5.9.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "resourceClass": "m-medium",
        "image": "latest"
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "API_URL": "http://localhost:3000"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "resourceClass": "m-medium",
        "image": "latest"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "env": {
        "API_URL": "https://api.stacktrackergold.com"
      }
    },
    "production": {
      "ios": {
        "simulator": false,
        "resourceClass": "m-medium",
        "autoIncrement": true,
        "image": "latest"
      },
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "env": {
        "API_URL": "https://api.stacktrackergold.com"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "jon.mancini@icloud.com",
        "ascAppId": "6757343766",
        "appleTeamId": "3BKELS5FG9"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "internal"
      }
    }
  }
}
